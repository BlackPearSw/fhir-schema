.main-menu.row
  .container
    .col-xs-10: h3  fhir-schema
    .col-xs-2: h3: a(href="https://github.com/niquola/fhir-schema") sources
.container
  br
  .row
    .col-xs-12
      textarea.fh.form-control(ng-model="resource" ui-codemirror="codemirrorConfig" ng-change="update()")
      br
      .alert.alert-danger(ng-if = "parseError") {{parseError}}

  div.alert.alert-success(ng-if="result.valid") Valid Resource
  div.alert.alert-danger(ng-repeat="err in result.errors" ng-click="err.show = !err.show") 
    h4.item
      b {{err.dataPath.replace('/','.')}} 
      | {{err.message}} &nbsp;
      code {{err.params | json}}
    div(ng-if="err.show") 
      br 
      pre {{ err | json }}
